<%= simple_form_for @flat do |f| %>
  <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, wrapper_html: { class: 'form-group' } %>
  <%= f.input :description, wrapper_html: { class: 'form-group' } %>
  <%= f.input :address, wrapper_html: { class: 'form-group' } %>
  <%= f.input :number_of_guests, collection: (1..12), wrapper_html: { class: 'form-group' } %>
  <%= f.input :price_per_night, wrapper_html: { class: 'form-group' } %>
  <%= f.submit "Add Flat", class: "btn btn-primary" %>
<% end %>
